


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  fullname   String
  email     String     @unique
  password  String
  imgUrl    String
  bio       String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  myItems   Auctions[]
}

model Auctions {
    id        Int        @id @default(autoincrement())
    type      String  
    ownerId   Int   
    auctionName String
    model       String
    year        Int
    kmCovered   Int
    mileage     Int
    ownership    Int
    discription  String
    photos      String[]
    startDate   DateTime
    endDate DateTime 
    Owner   User   @relation(fields: [ownerId],references: [id])
    price   Int
    registerdUsers String[]
}